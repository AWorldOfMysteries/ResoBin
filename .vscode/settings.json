{
	"files.exclude": {
		"**/__pycache__/**": true,
		"**/node_modules/**": true
	},
	"python.pythonPath": "backend\\env\\Scripts\\python.exe",
	"python.analysis.extraPaths": ["backend"],
	"editor.formatOnSave": true,
	"python.linting.enabled": true,
	"python.linting.flake8Enabled": true,
	"python.linting.flake8Args": ["--max-line-length=119", "--ignore=F401,F403,F405,E722"],
	"sqltools.connections": [
		{
			"previewLimit": 50,
			"driver": "SQLite",
			"name": "ResoBin - develop",
			"database": "${workspaceFolder:resobin}/backend/db.sqlite3",
			"group": "ResoBin"
		}
	],
	"sqltools.useNodeRuntime": true
}
