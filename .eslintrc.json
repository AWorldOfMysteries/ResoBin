{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": "off",
        "no-unused-expressions": "warn",
        "no-unused-vars": [
            "error",
            {
                "args": "none",
                "vars": "all"
            }
        ],
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "semi": "off",
        "react/jsx-props-no-spreading": "off",
        "comma-dangle": "off",
        "no-param-reassign": [
            "error",
            {
                "props": true,
                "ignorePropertyModificationsFor": [
                    "state"
                ]
            }
        ],
        "import/no-extraneous-dependencies": [
            "off",
            {
                "devDependencies": true,
                "optionalDependencies": true,
                "peerDependencies": true
            }
        ],
        "arrow-body-style": [
            "off"
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ]
            }
        }
    }
}